<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mmhachem.exchange.register.Register"
      stylesheets="@register.css"
      alignment="CENTER"
      spacing="20"
      prefWidth="600"
      prefHeight="500"
      styleClass="auth-container">

    <!-- Branding -->
    <VBox alignment="CENTER">
        <Label text="LBP Exchange Tracker" styleClass="brand-title"/>
        <Label text="Track, predict, and manage your currency exchange" styleClass="brand-subtitle"/>
    </VBox>

    <!-- White Card Container -->
    <VBox alignment="CENTER_LEFT" spacing="12" styleClass="auth-card">
        <Label text="Create New Account" styleClass="form-title"/>

        <Label text="Username"/>
        <TextField fx:id="usernameTextField" styleClass="input-field"/>

        <Label text="Password"/>
        <PasswordField fx:id="passwordTextField" styleClass="input-field"/>

        <Button text="Create Account" onAction="#register" styleClass="submit-button"/>
    </VBox>
</VBox>
