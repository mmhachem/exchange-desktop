<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mmhachem.exchange.profile.Profile"
      stylesheets="@profile.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="User Profile" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="usernameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="USD Balance:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="usdLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="LBP Balance:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="lbpLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Points:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="pointsLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Level:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="levelLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="Badges:" style="-fx-font-size: 16px;"/>
    <ListView fx:id="badgesList" prefHeight="150"/>

    <Button text="Refresh Profile" onAction="#refreshProfile"/>

</VBox>
