<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mmhachem.exchange.notifications.Notifications"
      stylesheets="@notifications.css">

    <Label text="Notifications" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="notificationTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="200"/>
            <TableColumn fx:id="messageColumn" text="Message" prefWidth="400"/>
            <TableColumn fx:id="timestampColumn" text="Time" prefWidth="200"/>
        </columns>
    </TableView>

    <Button text="Refresh" onAction="#refreshNotifications"/>
</VBox>
