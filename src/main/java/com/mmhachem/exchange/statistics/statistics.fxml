<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mmhachem.exchange.statistics.Statistics">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Date Range:" />
        <DatePicker fx:id="startDatePicker" promptText="Start Date" />
        <Label text="to" />
        <DatePicker fx:id="endDatePicker" promptText="End Date" />
        <ComboBox fx:id="granularityComboBox" promptText="Granularity" />
        <Button text="Apply" onAction="#applyFilter" />
    </HBox>

    <TabPane VBox.vgrow="ALWAYS">
        <Tab text="Rate History">
            <LineChart fx:id="rateHistoryChart">
                <xAxis>
                    <CategoryAxis label="Date" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Exchange Rate (LBP/USD)" />
                </yAxis>
            </LineChart>
        </Tab>
        <Tab text="Summary">
            <VBox spacing="10">
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                    </columnConstraints>

                    <Label text="Highest Rate:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <Label fx:id="highestRateLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Lowest Rate:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <Label fx:id="lowestRateLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Average Rate:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <Label fx:id="averageRateLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Median Rate:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <Label fx:id="medianRateLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Label text="Volatility:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <Label fx:id="volatilityLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                    <Label text="Total Transactions:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                    <Label fx:id="totalTransactionsLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                    <Label text="Total Volume (USD):" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                    <Label fx:id="totalVolumeUsdLabel" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                    <Label text="Total Volume (LBP):" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                    <Label fx:id="totalVolumeLbpLabel" GridPane.rowIndex="7" GridPane.columnIndex="1" />

                    <Label text="Total Users:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
                    <Label fx:id="totalUsersLabel" GridPane.rowIndex="8" GridPane.columnIndex="1" />
                </GridPane>
            </VBox>
        </Tab>
        <Tab text="Prediction">
            <VBox spacing="20" alignment="CENTER">
                <Label text="Tomorrow's Predicted Exchange Rate:" style="-fx-font-size: 16px;"/>
                <Label fx:id="predictionLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Button text="Calculate Prediction" onAction="#calculatePrediction"/>
            </VBox>
        </Tab>
    </TabPane>
</VBox>